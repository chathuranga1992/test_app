<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TitleTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextIpLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/colorInfoTop</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorTextField</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="editTexts">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/colorInfoTop</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorTextField</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Theme_Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

    </style>
</resources>